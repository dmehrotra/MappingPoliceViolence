<div class="row " id="card-container">
	<% @posts.each do |p| %>
		<div class="col-lg-4 col-md-6 col-sm-6 col-xs-12 card">
			<div class="card-wrapper">

				 <div class="title "><%= p.title %></div>
				 	 <div class="categories">
				 	<span class='bold'>Tags: </span>
				 	<% p.tags.each do |tag| %>
				 	  <a href="<%=dashboard_tag_path(tag.id)%>"><%=tag.name%></a> | 
				 	<%end%>
				 </div>

				 <div class="line"></div>
				<% if p.image%>
					<div class="media ">
						<a href="<%= edit_dashboard_post_path(p.id)%>">
							<img src="<%= p.image_url %>" alt="">
						</a> 
					</div>
				<% end %>
				 <div class="line"></div>
				 <div class="delete">
					<%= button_to "delete", {:controller => :posts, :action => 'destroy', :id => p.id }, :method => :delete, class: "btn btn-danger btn-sm" %>
				</div>
		

			</div>
		</div>
	<% end %>
</div>
