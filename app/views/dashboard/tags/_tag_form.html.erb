
<%= simple_form_for @tag, url: dashboard_tags_path do |f| %>
	<%= f.input :name, required: true %>
    <%= f.association :posts, :include_hidden => false, input_html: { class: 'multi-select' }  %>

	<%= submit_tag 'Save', class: "btn btn-default" %>
	<%= submit_tag 'Save and Preview', :name => 'preview', class: "btn btn-default" %>
	<% if @edit %>
		<%= link_to "delete", {:controller => :posts, :action => 'destroy', :id => @post.id }, :method => :delete, class: "btn btn-danger" %>
	<%end%>

<%end%>
