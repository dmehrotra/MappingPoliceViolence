{
  "name": "Troll Wizard",
  "description": "Widget for Mapping Police Violence",
  "version": "2.0",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://twitter.com/*", "https://twitter.com/*"],
      "js": ["jquery-1.12.3.min.js","shortcode.js"]
    }
  ],
  "browser_action": {
    "default_title": "Widget for Mapping Police Violence",
    "default_icon": "favicon.ico"
  },
  "manifest_version": 2,
  "web_accessible_resources": ["mpvstyle.css","test.json","assets/cover1.jpg","assets/cover2.jpg","assets/cover3.jpg","assets/tweetButton.png"]
}
